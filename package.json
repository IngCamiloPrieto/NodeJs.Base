{
  "name": "api-cloud",
  "version": "0.0.0",
  "description": "API Restful Alvic POS",
  "main": "./src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/alvic.net/pos/cloud-api.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Cloud",
    "Multicompany"
  ],
  "author": "Andrés Gómez <a.gomez@alvic.net>",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "npx shx rm -rf build/",
    "copy-files": "npx shx cp -R src/views/ build/ && npx shx cp -R src/public/ build/",
    "build": "yarn clean && tsc && yarn copy-files",
    "start": "yarn build && node ./build/index.js",
    "dev:start": "nodemon src/index.ts",
    "dev:debug": "nodemon --inspect src/index.ts",
    "ts:node": "ts-node src/index.ts",
    "test": "mocha -r ts-node/register test/**/*.ts --timeout 15000"
  },
  "dependencies": {
    "ajv": "^8.5.0",
    "axios": "^0.21.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^5.2.0",
    "helmet": "^4.3.1",
    "http-errors": "^1.8.0",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "mocha": "^9.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "pg-promise": "^10.8.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.5",
    "ts-custom-error": "^3.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/express-handlebars": "^3.1.0",
    "@types/http-errors": "^1.8.0",
    "@types/mocha": "^8.2.2",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.16",
    "@types/sequelize": "^4.28.9",
    "nodemon": "^2.0.6",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  }
}
